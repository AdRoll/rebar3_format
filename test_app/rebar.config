{erl_opts, [
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars,
    debug_info
]}.

{deps, []}.

{plugins, [{rebar3_format, {git, "git@github.com:SemanticSugar/rebar3_format.git", {branch, "master"}}}]}.

{format, [{files, ["src/*.erl", "include/*.hrl"]}, {dummy, option}]}.
