{erl_opts,
 [warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  debug_info]}.

{minimum_otp_vsn, "21"}.

{deps, [{katana_code, "1.1.2"}]}.

{project_plugins, [rebar3_hex, rebar3_lint, rebar3_hank]}.

{dialyzer, [{warnings, [no_return, unmatched_returns, error_handling, underspecs]}]}.

{edoc_opts, [{todo, true}, {overview, "priv/overview.edoc"}]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.

{alias, [{test, [lint, hank, dialyzer, ct, cover]}, {format, [compile]}]}.

{post_hooks, [{compile, "escript priv/scripts/format"}]}.

{hank, [{ignore, ["test_app/**/*"]}]}.
